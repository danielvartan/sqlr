citHeader("To cite sqlr in publications use:")

citEntry(
  entry       = "Unpublished",
  title       = paste0("sqlr: An R package for systematic quantitative ",
                       "literature reviews"),
  author      = personList(as.person("Daniel Vartanian"),
                           as.person("Ana Amelia Benedito-Silva"),
                           as.person("Mario Pedrazzoli")),
  year        = "2021",
  url         = "https://gipsousp.github.io/sqlr/",
  textVersion = paste0("Vartanian, D., Benedito-Silva, A. A., Pedrazzoli, M. ",
                       "(2021). sqlr: An R package for systematic quantitative ",
                       "literature reviews. Retrieved from ",
                       "https://gipsousp.github.io/sqlr/ ."),
  note        = "Lifecycle: experimental"
)
